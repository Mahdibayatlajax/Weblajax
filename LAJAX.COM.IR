    <script>
        // نمایش مودال OTP
        function showOTPModal() {
            document.getElementById('otpSection').style.display = 'block';
            document.getElementById('otpInputSection').style.display = 'none';
        }
        
        // ارسال کد OTP
        function sendOTP(channel) {
            const contact = document.getElementById('contactInput').value;
            if (!contact) {
                alert('لطفاً شماره موبایل یا ایمیل خود را وارد کنید');
                return;
            }
            
            // شبیه‌سازی ارسال کد (در نسخه واقعی به سرور متصل می‌شود)
            alert(`کد تأیید به ${contact} از طریق ${channel === 'whatsapp' ? 'واتساپ' : 
                  channel === 'telegram' ? 'تلگرام' : 'ایمیل'} ارسال شد`);
            
            document.getElementById('otpInputSection').style.display = 'block';
        }
        
        // تأیید کد OTP
        function verifyOTP() {
            const otp = document.getElementById('otpInput').value;
            if (otp.length !== 6) {
                alert('لطفاً کد تأیید ۶ رقمی را وارد کنید');
                return;
            }
            
            // شبیه‌سازی تأیید کد
            alert('احراز هویت با موفقیت انجام شد! خوش آمدید');
            document.getElementById('otpSection').style.display = 'none';
        }
        
        // بزرگنمایی تصویر
        function zoomImage(src) {
            document.getElementById('zoomedImage').src = src;
            document.getElementById('imageZoomModal').style.display = 'flex';
        }
        
        // بستن بزرگنمایی
        function closeZoom() {
            document.getElementById('imageZoomModal').style.display = 'none';
        }
        
        // بستن مودال با کلیک خارج از آن
        window.addEventListener('click', function(event) {
            const otpSection = document.getElementById('otpSection');
            if (event.target === otpSection) {
                otpSection.style.display = 'none';
            }
        });
        
        // پشتیبانی از کیبورد
        document.addEventListener('keydown', function(event) {
            // بستن مودال با کلید ESC
            if (event.key === 'Escape') {
                document.getElementById('otpSection').style.display = 'none';
                document.getElementById('imageZoomModal').style.display = 'none';
            }
        });
    </script>
